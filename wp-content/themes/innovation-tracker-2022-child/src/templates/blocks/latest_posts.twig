{% set classes = [
    'component',
    'component-latest-posts',

  ]
%}

<div class="{{ classes|join(' ') }}">
  <div class="latest_posts__content">
    <div class="container">
      <div class="row">
        <div class="latest_posts__intro">
          <div class="col-12">
            <h2 class="latest_posts__headline">{{ fields.headline }}</h2>
            <p class="latest_posts__description">{{ fields.description }}</p>
          </div>
        </div>
        <div class="latest_posts__posts">
          <div class="row">
            {% for post in latest_posts %}
              {% if exclude is null or post.id not in exclude %}
                <div class="col-12 col-lg-4">
                  {% include 'post-preview.twig' with {post:post,classes:[]} %}
                </div>
              {% endif %}
            {% endfor %}
            {% if latest_posts|length < 3 %}
              <div class="col-12 col-lg-4">
                {% include 'post-preview.twig' with {post:{title:'Definitions and Methodology',post_type:'post', link: '/methodology', thumbnail: {src: '/wp-content/uploads/2022/11/HeroImage.png'},date:'2022-11-01'},classes:[]} %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>