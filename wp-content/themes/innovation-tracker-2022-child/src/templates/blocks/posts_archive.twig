{% set classes = [
    'component',
    'component-posts-archive',

  ]
%}

<div class="{{ classes|join(' ') }}">
  <div class="archive__content">
    <div class="container">
      <div class="row">
        <div class="archive__posts">
          <div class="row">
            {% for post in posts %}
              <div class="col-12 col-lg-4">
                {% include 'post-preview.twig' with {post:post,classes:[]} %}
              </div>
            {% endfor %}
            {% if posts|length < 3 %}
              <div class="col-12 col-lg-4">
                {% include 'post-preview.twig' with {post:{title:'Definitions and Methodology',post_type:'post', link: '/methodology', thumbnail: {src: '/wp-content/uploads/2022/11/HeroImage.png'},date:'2022-11-01'},classes:[]} %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>